{
   "manifest_version": 2,
   "app": {
      "launch": {
         "local_path": "public/index.html"
      }
   },
   "background": {
       "scripts": ["public/javascripts/background.js"]
   },
   "description": "Tool for Pomodoro Technique",
   "icons": {
      "128": "public/images/tomato_128.png",
      "16": "public/images/tomato_16.png",
      "32": "public/images/tomato_32.png"
   },
   "name": "Pomodoro Daisuki",
   "permissions": [ "notifications", "tabs", "storage"],
   "version": "0.46",
   "options_page": "public/options.html"
}
